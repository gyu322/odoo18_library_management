<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Scheduled Action: Daily Overdue Fine Calculator -->
    <record id="ir_cron_calculate_overdue_fines" model="ir.cron">
        <field name="name">Calculate Overdue Fines</field>
        <field name="model_id" ref="model_library_borrowing_record"/>
        <field name="state">code</field>
        <field name="code">model.cron_calculate_overdue_fines()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_admin"/>
    </record>

    <!-- Scheduled Action: Weekly Member Status Review -->
    <record id="ir_cron_member_status_review" model="ir.cron">
        <field name="name">Weekly Member Status Review</field>
        <field name="model_id" ref="model_library_member"/>
        <field name="state">code</field>
        <field name="code">model.cron_review_member_status()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="active" eval="True"/>
        <field name="user_id" ref="base.user_admin"/>
    </record>

</odoo>